<div id="<%= dom_id repository_type %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= repository_type.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this repository type", repository_type, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this repository type", edit_repository_type_path(repository_type), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
